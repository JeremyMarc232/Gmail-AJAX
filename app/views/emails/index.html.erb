<%= button_to emails_path, method:"create", :class => "ml-4 mb-5 btn-success", remote: true do %>
  Recevoir un email
<% end %>
<div class="d-flex">
  <div class="col-3">
    <ul id="email-list">
      <% @emails.each do  |email|%>
        <div id="dismiss" class="card">
          <div class="card-body">
            <li id="objet-id-<%=email.id%>"> <%= link_to email.object, email_path(email.id), remote: true%></li>
          </div>
        </div>
      <% end %>
    </ul>
  </div>

  <div class="col-9">
      <div id="email-body" class="card-body">
        Clic dans la colonne de gauche pour afficher les emails!
      </div>
    </div>
</div>