<div class="d-flex">
  <div class="col-3">
    <ul id="email-list">
      <% @emails.each do  |email|%>
        <div class="card">
          <div class="card-body">
            <li><%= link_to email.object, email_path(email.id)%></li>
          </div>
        </div>
      <% end %>
    </ul>
  </div>
  
  <div class="col-9 card card-body">
    <h1> <%= @email.object %> </h1>
    <h2 id="email-body"> <%= @email.body %> </h2>
  </div>
</div>